<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>College Event Management System</display-name>

    <!-- Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateEventServlet</servlet-name>
        <servlet-class>CreateEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateEventServlet</servlet-name>
        <url-pattern>/createEvent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetEventsServlet</servlet-name>
        <servlet-class>GetEventsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetEventsServlet</servlet-name>
        <url-pattern>/getEvents</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApproveEventServlet</servlet-name>
        <servlet-class>ApproveEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApproveEventServlet</servlet-name>
        <url-pattern>/approveEvent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterEventServlet</servlet-name>
        <servlet-class>RegisterEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterEventServlet</servlet-name>
        <url-pattern>/registerEvent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetRegistrationsServlet</servlet-name>
        <servlet-class>GetRegistrationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetRegistrationsServlet</servlet-name>
        <url-pattern>/getRegistrations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllRegistrationsServlet</servlet-name>
        <servlet-class>GetAllRegistrationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllRegistrationsServlet</servlet-name>
        <url-pattern>/getAllRegistrations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetMyRegistrationsServlet</servlet-name>
        <servlet-class>GetMyRegistrationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetMyRegistrationsServlet</servlet-name>
        <url-pattern>/getMyRegistrations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GenerateQRServlet</servlet-name>
        <servlet-class>GenerateQRServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenerateQRServlet</servlet-name>
        <url-pattern>/generateQR</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageUsersServlet</servlet-name>
        <servlet-class>ManageUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageUsersServlet</servlet-name>
        <url-pattern>/manageUsers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

</web-app>
